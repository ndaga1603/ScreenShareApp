<MainScreen@MDScreen>:
    name: "main"

    MDFloatLayout:
        MDTopAppBar:
            pos_hint: {"top": 1}
            elevation: 4
            title: 'DMS'
            left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]

    MDNavigationLayout:

        MDScreenManager:
            id: screen_manager

            # screens(pages)
            HomeScreen:
            FeedbackScreen:
            HelpScreen:
            # RunningServerScreen:
                                
        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 10, 10, 0)

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer


