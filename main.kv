################################ START USER SCREEN ####################################

<UserType@MDCheckbox>:
    group: "user_type"
    size_hint: None, None
    size: dp(48), dp(48)

<LoginScreen>:
    MDScreen:
        MDCard:
            orientation: "vertical"
            size_hint: None, None
            size: 300, 400
            pos_hint: {"center_x": .5, "center_y": .5}
            elevation: 8
            padding: [30, 0, 30, 30]
            spacing: 30
            padding_y: 15

            MDLabel:
                text: "LOGIN"
                font_style: "Button"
                font_size: 34
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]
                
            MDTextField:
                id: username
                mode: "rectangle"
                hint_text: "Username"
                icon_right: "account"
                size_hint_x: None
                width: 250
                font_size: 20
                pos_hint: {"center_x": .5}


            MDTextField:
                id: password
                mode: "rectangle"
                hint_text: "Password"
                password: True
                icon_right: "eye-off"
                size_hint_x: None
                width: 250
                font_size: 20
                pos_hint: {"center_x": .5}

            MDRectangleFlatButton:
                text: "Login"
                pos_hint: {"center_x": .5}
                font_size: 15
                on_release: app.login()
            
            MDTextButton:
                text: "I have't account, REGISTER"
                pos_hint: {"center_x": .5}
                font_size: 12
                on_release: app.root.current = "register_screen"
         

<RegisterScreen>:
    MDScreen:
        MDCard:
            orientation: "vertical"
            size_hint: None, None
            size: 300, 560
            pos_hint: {"center_x": .5, "center_y": .5}
            elevation: 8
            padding: [30, 0, 30, 30]
            spacing: 30
            padding_y: 15

            MDLabel:
                text: "REGISTER"
                font_style: "Button"
                font_size: 34
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]
                
            MDTextField:
                id: username
                mode: "rectangle"
                hint_text: "Username"
                icon_right: "account"
                size_hint_x: None
                width: 250
                font_size: 20
                pos_hint: {"center_x": .5}


            MDTextField:
                id: password1
                mode: "rectangle"
                hint_text: "Password"
                password: True
                icon_right: "eye-off"
                size_hint_x: None
                width: 250
                font_size: 20
                pos_hint: {"center_x": .5}

            MDTextField:
                id: password2
                mode: "rectangle"
                hint_text: "Confirm Password"
                password: True
                size_hint_x: None
                width: 250
                font_size: 20
                pos_hint: {"center_x": .5}

            BoxLayout:
                orientation: "horizontal"
                size_hint: None, None
                size: 250, 48
                pos_hint: {"center_x": .5}


                UserType:
                    id: user_type
                    active: True
                    value: "teacher"
                    font_size: 16

                MDLabel:
                    text: "Teacher"
                    size_hint_x: None
                    width: 80
                    font_size: 16
                    halign: "left"
                    valign: "center"
                    
                UserType:
                    id: user_type
                    value: "student"
                    font_size: 16

                MDLabel:
                    text: "Student"
                    size_hint_x: None
                    width: 80
                    font_size: 16
                    halign: "left"
                    valign: "center"


            MDRectangleFlatButton:
                text: "Register"
                pos_hint: {"center_x": .5}
                font_size: 15
                on_release: app.register()
            
            MDTextButton:
                text: "I have an account, LOGIN"
                pos_hint: {"center_x": .5}
                font_size: 12
                on_release: app.root.current = "login_screen"

############################ END USER SCREEN ####################################


